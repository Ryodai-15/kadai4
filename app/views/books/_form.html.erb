 <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <div class = "field row">
      <p><strong>Title</strong></p>
      <%= f.text_field :title, class: "col-lg-12 book_title" %>
    </div>
    <div class = "field row">
      <p><strong>Opinion</strong></p>
      <%= f.text_area :body, class: "col-lg-12 book_body" %>
    </div>
    <div class = "field row">
      <%= f.submit 'Create Book', class: "btn btn-primary col-lg-12" %>
    </div>
  <% end %>